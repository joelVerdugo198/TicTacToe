<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Crear sala"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCreateRoom" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" android:layout_marginRight="50dp" android:layout_marginEnd="50dp"
            android:textAllCaps="false"
            android:layout_marginTop="95dp" app:layout_constraintTop_toBottomOf="@+id/textViewMessageName"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nombre"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editTextName" android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp" android:layout_marginLeft="50dp" android:layout_marginStart="50dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Buscar sala"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonSearchRoom" android:layout_marginRight="50dp" android:layout_marginEnd="50dp"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/buttonCreateRoom" android:layout_marginTop="100dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="CÃ³digo de sala"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/editTextCode" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/buttonSearchRoom"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/imageButtonCode"
            app:layout_constraintStart_toEndOf="@+id/editTextCode"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp" app:layout_constraintBottom_toBottomOf="@+id/editTextCode"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMessageName" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="50dp" android:layout_marginEnd="50dp" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:textColor="#990000"/>

</androidx.constraintlayout.widget.ConstraintLayout>